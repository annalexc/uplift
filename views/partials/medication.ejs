<div class="modal new-med-modal">
  <div class="medications-modal-content">
    <div id="close-add-med-modal">
      <p>X</p>
    </div>
    <h2>Medication</h2>
    <form id="medication" action="/users/medications" method="post">
      <label for="medName">Medication:</label>
      <input type="text" name="medName" placeholder="Name" required>
      <label for="medDosage">Dosage:</label>
      <input type="text" name="medDosage" placeholder="Dosage" required>
      <label for="medSideEffects">Side Effects:</label>
      <input type="text" name="medSideEffects" placeholder="Side Effects" required>
      <label for="medTime">Time:</label>
      <input type="text" name="medTime" placeholder="Time" required>
      <label for="medCoPay">Copay:</label>
      <input type="number" name="medCoPay" placeholder="Copay" min=0 required>
      <input type="submit" name="medicationAdd" class="btn btn-primary" value="Add">
    </form>
  </div>
</div>
